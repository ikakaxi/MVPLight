<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- AppCompatEditText默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@color/color_bfbfbf</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">@color/color_1296db</item>
    </style>

    <!-- 内容区域 -->
    <style name="superTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="sLeftTextSize">15sp</item>
        <item name="sRightIconRes">@drawable/common_ic_next</item>
        <item name="sRightTextColor">#666666</item>
        <item name="sRightTextSize">13sp</item>
        <item name="sBottomDividerLineMarginLeft">15dp</item>
        <item name="sLeftViewMarginLeft">15dp</item>
        <item name="sLeftIconMarginLeft">15dp</item>
        <item name="sRightIconMarginRight">15dp</item>
        <item name="sRightViewMarginRight">15dp</item>
        <item name="sDividerLineColor">#ededed</item>
    </style>
</resources>